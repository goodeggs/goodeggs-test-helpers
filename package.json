{
  "name": "goodeggs-test-helpers",
  "version": "1.3.0",
  "description": "Basic setup used for all goodeggs tests.",
  "main": "server.js",
  "browser": {
    "./server.js": "./browser.js",
    "sinon": "./sinon_webpack_shim.js",
    "./global.js": "./global_browser_shim.js"
  },
  "author": "Good Eggs Inc.",
  "contributors": [
    "dannynelson <danny@goodeggs.com>",
    "max edmands <max@goodeggs.com>"
  ],
  "license": "UNLICENSED",
  "engines": {
    "node": ">=4"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/goodeggs/goodeggs-test-helpers.git"
  },
  "dependencies": {
    "bluebird": "^3.3.4",
    "chai": "^3.3.0",
    "chai-as-promised": "^5.1.0",
    "chai-datetime": "^1.4.1",
    "chaid": "^1.0.2",
    "dirty-chai": "^1.2.2",
    "geomoment": "*",
    "lodash.isfunction": "^3.0.8",
    "sinon": "^1.14.1",
    "sinon-chai": "^2.7.0"
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-eslint": "^6.1.2",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-plugin-transform-flow-strip-types": "^6.14.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-register": "^6.7.2",
    "eslint": "~3.1.1",
    "eslint-plugin-goodeggs": "^3.3.1",
    "eslint-plugin-lodash": "^1.10.3",
    "eslint-plugin-mocha": "^4.5.1",
    "flow-bin": "^0.32.0",
    "in-publish": "^2.0.0",
    "mocha": "^2.4.5"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "add-module-exports",
      "transform-flow-strip-types"
    ]
  },
  "scripts": {
    "build": "rm -rf build/ && babel src -d build && cp package.json can_publish build/",
    "prepublish": "./can_publish",
    "postpublish": "npm cache clean",
    "lint": "eslint 'src/**/*.js'  --ignore-path .gitignore",
    "test:mocha": "npm run build && NODE_ENV=test mocha --compilers=js:babel-register",
    "test:mocha:all": "npm run build && npm run test:mocha -- 'test/*.js'",
    "test:single": "npm run build && npm run test:mocha -- __TESTFILE__",
    "test:watch:single": "npm run build && npm run test:mocha -- --watch __TESTFILE__",
    "test": "npm run build && npm run lint && npm run test:mocha:all --"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "always-auth": true
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "goodeggs"
    ],
    "extends": [
      "plugin:goodeggs/goodeggs"
    ],
    "env": {
      "node": true
    }
  }
}
