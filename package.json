{
  "name": "goodeggs-test-helpers",
  "version": "6.5.1",
  "description": "Basic setup used for all goodeggs tests.",
  "author": "Good Eggs Inc.",
  "license": "UNLICENSED",
  "main": "lib/index.js",
  "bin": {
    "runtest": "./runtest.sh"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/goodeggs/goodeggs-test-helpers.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "always-auth": true
  },
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "build": "rm -rf lib/ && babel src -d lib && flow-copy-source --verbose src/ lib/",
    "lint": "eslint '**/*.{js,jsx,ts,tsx}'",
    "prepublishOnly": "yarn build",
    "test": "yarn run lint && flow && npm run test:mocha",
    "test:mocha": "mocha --require @babel/register --exclude 'node_modules/**' '**/?(*.)test.?(*.){js,jsx,ts,tsx}'",
    "test:mocha:watch": "yarn run test:mocha --watch"
  },
  "dependencies": {
    "chai": "4.2.0",
    "chai-as-promised": "7.1.1",
    "chai-datetime": "1.5.0",
    "chaid": "1.0.2",
    "date-test-helpers": "1.1.2",
    "dirty-chai": "2.0.1",
    "mocha-multi": "1.0.1",
    "mocha-osx-reporter": "0.1.2",
    "nyc": "^13.0.1",
    "sinon": "6.3.5",
    "sinon-chai": "3.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-flow": "^7.0.0",
    "@babel/register": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "bunyan": "1.8.12",
    "eslint": "4.19.1",
    "eslint-plugin-goodeggs": "7.1.0",
    "flow-bin": "^0.85.0",
    "flow-copy-source": "^2.0.2",
    "mocha": "^5.2.0"
  },
  "eslintConfig": {
    "root": true,
    "parser": "babel-eslint",
    "plugins": [
      "goodeggs"
    ],
    "extends": [
      "plugin:goodeggs/goodeggs"
    ],
    "env": {
      "node": true
    },
    "overrides": [
      {
        "files": [
          "src/use_sinon_sandbox.js"
        ],
        "env": {
          "mocha": true
        }
      },
      {
        "files": [
          "babel.config.js"
        ],
        "rules": {
          "goodeggs/import-no-commonjs": "off"
        }
      }
    ]
  }
}
